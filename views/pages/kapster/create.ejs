<%- include("../../partials/header")%>
<%- include("../../partials/navbar") %>
<%- include("../../partials/sidebar") %>

<div class="p-4 sm:ml-64">
    <div class="p-4 mt-14">
        <div class="flex flex-col gap-y-2 pb-10 md:-mt-16">
            <h1 class="text-2xl font-medium">Add Kapster</h1>
            <p class="text-md md:text-lg font-light text-gray-400">Tambah kapstermu!</p>
        </div>
        <div class="bg-white w-full rounded-lg">
            <div class="p-6">
                <form action="/kapster/create" method="POST" enctype="multipart/form-data">
                    <div class="flex flex-col md:flex-row md:flex-wrap justify-between gap-y-5 md:gap-x-2 py-2">
                        <div class="flex flex-col md:w-[30rem] gap-y-2">
                            <label for="name" class="text-gray-600 font-light">Nama Kapster</label>
                            <input name="name" type="text" class="placeholder:italic placeholder:text-slate-400 bg-white w-full border border-gray-500 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-secondary focus:ring-secondary focus:ring-1 sm:text-sm" placeholder="ex: Ipung">
                        </div>
                        <div class="flex flex-col md:w-[30rem] gap-y-2">
                            <label for="barberId" class="text-gray-600 font-light">Barbershop</label>
                            <select name="barberId" id="barberId" class="bg-white border border-gray-500 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5">
                                <option selected>Pilih Barber</option>
                                <% for( let i = 0; i < barber.length; i++ ) { %>
                                    <option value="<%= barber[i]._id %>"><%= barber[i].name %> </option>
                                <% } %>
                            </select>
                        </div>
                        <div class="flex flex-col md:w-full gap-y-2">
                            <label for="image" class="text-gray-600 font-light">Photo</label>
                            <input name="image" type="file" class="pl-9 pr-3 sm:text-sm text-sm text-slate-500" multiple>
                        </div>
                        <div class="flex flex-col md:w-full gap-y-2">
                            <button type="submit" style="background: #D25B04;" class="py-2 text-white font-semibold rounded-md hover:bg-secondary-hover hover:text-slate-100">Simpan</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include("../../partials/footer")%>