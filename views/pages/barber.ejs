<%- include("../partials/header")%>
<%- include("../partials/navbar") %>
<%- include("../partials/sidebar") %>

<div class="p-4 sm:ml-64">
    <div class="p-4 mt-14">
        <div class="flex flex-col gap-y-2 pb-10 md:-mt-16">
            <h1 class="text-2xl font-medium">My Account Barber</h1>
            <p class="text-md md:text-lg font-light text-gray-400">Perbarui informasi pangkasmu!</p>
        </div>
        <div class="bg-white w-full rounded-lg">
            <div class="p-6">
                <div class="flex flex-col md:flex-row md:flex-wrap justify-between gap-y-5 md:gap-x-2 py-2">
                    <div class="flex flex-col md:w-[30rem] gap-y-2">
                        <label class="text-gray-600 font-light">Nama Pangkas Rambut / Barbershop</label>
                        <input type="text" class="placeholder:italic placeholder:text-slate-400 bg-white w-full border border-gray-500 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-secondary focus:ring-secondary focus:ring-1 sm:text-sm" placeholder="Nama Pangkas">
                    </div>
                    <div class="flex flex-col md:w-[30rem] gap-y-2">
                        <label class="text-gray-600 font-light">Harga</label>
                        <input type="text" class="placeholder:italic placeholder:text-slate-400 bg-white w-full border border-gray-500 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-secondary focus:ring-secondary focus:ring-1 sm:text-sm" placeholder="Harga">
                    </div>
                    <div class="flex flex-col md:w-full gap-y-2">
                        <label class="text-gray-600 font-light">Deskripsi</label>
                        <textarea type="text" class="placeholder:italic placeholder:text-slate-400 bg-white w-full border border-gray-500 rounded-md py-2 pl-9 pr-3 shadow-sm focus:outline-none focus:border-secondary focus:ring-secondary focus:ring-1 sm:text-sm" placeholder="Deskripsi ..."></textarea>
                    </div>
                    <div class="flex flex-col md:w-full gap-y-2">
                        <label class="text-gray-600 font-light">Photo</label>
                        <input type="file" class="pl-9 pr-3 sm:text-sm text-sm text-slate-500">
                    </div>
                    <div class="flex md:w-full gap-x-4">
                        <div class="relative w-1/4">
                            <img src="https://flowbite.com/docs/images/people/profile-picture-4.jpg" alt="Image" class="w-full h-auto rounded-md">
                            <button class="absolute top-0 right-0 text-2xl -mt-3 -mr-3">
                                <i class="bx bxs-x-circle text-red-600 bg-white rounded-full"></i>
                            </button>
                        </div>
                        <div class="relative w-1/4">
                            <img src="https://flowbite.com/docs/images/people/profile-picture-1.jpg" alt="Image" class="w-full h-auto rounded-md">
                            <button class="absolute top-0 right-0 text-2xl -mt-3 -mr-3">
                                <i class="bx bxs-x-circle text-red-600 bg-white rounded-full"></i>
                            </button>
                        </div>
                        <div class="relative w-1/4">
                            <img src="https://flowbite.com/docs/images/people/profile-picture-2.jpg" alt="Image" class="w-full h-auto rounded-md">
                            <button class="absolute top-0 right-0 text-2xl -mt-3 -mr-3">
                                <i class="bx bxs-x-circle text-red-600 bg-white rounded-full"></i>
                            </button>
                        </div>
                        <div class="relative w-1/4">
                            <img src="https://flowbite.com/docs/images/people/profile-picture-3.jpg" alt="Image" class="w-full h-auto rounded-md">
                            <button class="absolute top-0 right-0 text-2xl -mt-3 -mr-3">
                                <i class="bx bxs-x-circle text-red-600 bg-white rounded-full"></i>
                            </button>
                        </div>
                    </div>
                    <div class="flex flex-col md:w-full gap-y-2">
                        <button class="bg-secondary py-2 text-white font-semibold rounded-md hover:bg-secondary-hover hover:text-slate-100">Simpan</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include("../partials/footer")%>